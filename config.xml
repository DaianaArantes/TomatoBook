<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.tomatobook" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TomatoBook</name>
    <description>
        A mobile application to register tomatoes with pictures, and saves them to database.
    </description>
    <author email="darantesdeassis1750@conestogac.on.ca" href="http://cordova.io">
        Daiana Arantes de Assis
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/img/icon.png" />
    <splash src="www/img/splash.png" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
